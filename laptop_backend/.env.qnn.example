# Qualcomm AI Stack (QAIRT) Configuration
# Copy this file to .env.qnn and customize for your environment

# ============================================================================
# QNN SDK Paths
# ============================================================================
QNN_SDK_ROOT=/opt/qcom/aistack/qairt/2.26.0
QNN_HTP_BACKEND=${QNN_SDK_ROOT}/lib/aarch64-android/libQnnHtp.so
QNN_SYSTEM_LIB=${QNN_SDK_ROOT}/lib/aarch64-android/libQnnSystem.so

# ============================================================================
# Model Paths
# ============================================================================
QNN_MODEL_CONTEXT=./models/llama3_htp_context/llama3_8b_w4a16.bin
TOKENIZER_PATH=./models/llama3_8b_onnx

# ============================================================================
# Inference Configuration
# ============================================================================
# Maximum input context length (tokens)
MAX_CONTEXT_LENGTH=2048

# Maximum tokens to generate in response
MAX_NEW_TOKENS=512

# Sampling temperature (0.0 = deterministic, 1.0+ = creative)
# Range: 0.1 - 2.0
TEMPERATURE=0.7

# Nucleus sampling threshold (top-p)
# Range: 0.1 - 1.0
TOP_P=0.9

# KV Cache size in megabytes
# Adjust based on available RAM (512MB for 12GB devices, 1024MB for 16GB+)
KV_CACHE_SIZE_MB=512

# ============================================================================
# HTP (Hexagon Tensor Processor) Configuration
# ============================================================================
# Performance mode: burst | balanced | default | sustained_high_performance
HTP_PERFORMANCE_MODE=burst

# Graph optimization level: 0 (none) to 3 (max)
HTP_GRAPH_FINALIZATION_OPTIMIZATION_MODE=3

# Enable profiling for performance analysis
ENABLE_PROFILING=false

# ============================================================================
# Flask Application Configuration
# ============================================================================
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
QNN_LOG_LEVEL=WARNING
